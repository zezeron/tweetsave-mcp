  "repository": {
    "url": "https://github.com/zezeron/tweetsave-mcp",
    "source": "github"
  },
  "version": "1.0.2",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "tweetsave-mcp",
      "version": "1.0.2",
      "transport": {
        "type": "stdio"
      }
    }
  ],
  "remotes": [
    {
      "type": "sse",
      "url": "https://mcp.tweetsave.org/sse"
    }
  ]
}
