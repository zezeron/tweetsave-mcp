{
  "name": "tweetsave-mcp",
  "mcpName": "io.github.zezeron/tweetsave-mcp",
  "version": "1.0.2",
  "description": "MCP server for fetching Twitter/X content and converting to blog posts. Works with Claude, GPT, and other AI assistants.",
